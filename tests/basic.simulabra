~class.new{
  :name=:point
  :components=(
    ~var.new{:name=:x :type=:number}
    ~var.new{:name=:y :type=:number}
    ~method.new{
      :name=:dist
      :do=[%it|^.x.-(%it.x).pow(2).+(.y.-(%it.y).pow(2)).sqrt]
    }
  )
}


~case.new{
  :name=:basic-points
  :do=[|
    %p=~point.new{:x=3 :y=0}
    %q=~point.new{:x=0 :y=4}
    .assert-eq(%p.dist(%q) 5)
  ]
}
